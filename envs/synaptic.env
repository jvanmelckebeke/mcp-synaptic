# MCP Synaptic Configuration

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Storage
SQLITE_DATABASE_PATH=/app/data/synaptic.db
CHROMADB_PERSIST_DIRECTORY=/app/data/chroma
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Memory Management
DEFAULT_MEMORY_TTL_SECONDS=3600
MAX_MEMORY_ENTRIES=10000
MEMORY_CLEANUP_INTERVAL_SECONDS=300

# Embeddings
EMBEDDING_PROVIDER=api
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_API_BASE=http://litellm.lan
EMBEDDING_API_KEY=sk-1234

# RAG
MAX_RAG_RESULTS=10
RAG_SIMILARITY_THRESHOLD=0.7

# SSE
SSE_HEARTBEAT_INTERVAL=30
SSE_MAX_CONNECTIONS=100