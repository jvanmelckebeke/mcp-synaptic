# MCP Synaptic Development Configuration

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG

# Storage
SQLITE_DATABASE_PATH=/app/data/synaptic.db
CHROMADB_PERSIST_DIRECTORY=/app/data/chroma
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Memory Management (dev - shorter TTLs)
DEFAULT_MEMORY_TTL_SECONDS=300
MAX_MEMORY_ENTRIES=1000
MEMORY_CLEANUP_INTERVAL_SECONDS=60

# Embeddings
EMBEDDING_PROVIDER=api
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_API_BASE=http://172.17.0.1:4000
EMBEDDING_API_KEY=sk-1234

# RAG (dev - fewer results)
MAX_RAG_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.6

# SSE
SSE_HEARTBEAT_INTERVAL=30
SSE_MAX_CONNECTIONS=100